{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",
    /* Modules */
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    /* Emit */
    "declaration": true,
    "allowJs": true,
  },
  "exclude": [
    "jest.config.js",
    "node_modules"
  ],
}
